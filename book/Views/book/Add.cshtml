
<div class="pageContent">
    <form method="post" action="/book/Addsave" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <p>
                <label>书名</label>
                <input name="BookName" type="text" size="30" />
            </p>
            <p>
                <label>编号</label>
                <input name="Code" class="required" type="text" size="30" />
            </p>
            <p>
                <label>价格</label>
                <input type="text" class="required" name="Price" size="30" />
            </p>
            <p>
                <label>作者</label>
                <input type="text" name="Author" class="textInput">
            </p>
            <p>
                <label>出版年月</label>
                <input name="PYear" class="date " type="text" size="30" />
            </p>
            <p>
                <label>版本</label>
                <input name="Version"  type="text" size="30"  />
            </p>
            <p>
                <label>图片</label>
                <input name="Pic" type="text" size="30" />
            </p>
           
        </div>
        <div class="formBar">
            <ul>
                @*<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>*@
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>
