@{
    Layout = null;
    List<book.Model.T_Base_Book> lst = ViewBag.lst;
}

<form id="pagerForm" method="post" action="/book/BuyerList">
    <input type="hidden" name="status" value="${param.status}">
    <input type="hidden" name="keywords" value="${param.keywords}" />
    <input type="hidden" name="pageNum" value="1" />
    <input type="hidden" name="numPerPage" value="${model.numPerPage}" />
    <input type="hidden" name="orderField" value="${param.orderField}" />
</form>


<div class="pageHeader">
    <form onsubmit="return navTabSearch(this);" action="/book/BuyerList" method="post">
        <div class="searchBar">
            <!--<ul class="searchContent">
                <li>
                    <label>我的客户：</label>
                    <input type="text"/>
                </li>
                <li>
                <select class="combox" name="province">
                    <option value="">所有省市</option>
                    <option value="北京">北京</option>
                    <option value="上海">上海</option>
                    <option value="天津">天津</option>
                    <option value="重庆">重庆</option>
                    <option value="广东">广东</option>
                </select>
                </li>
            </ul>
            -->
            <table class="searchContent">
                <tr>
                    <td>
                        书名：<input type="text" name="keyword" />
                    </td>
                    <td>
                        <select class="combox" name="province">
                            <option value="">所有省市</option>
                            <option value="北京">北京</option>
                            <option value="上海">上海</option>
                            <option value="天津">天津</option>
                            <option value="重庆">重庆</option>
                            <option value="广东">广东</option>
                        </select>
                    </td>
                    <td>
                        建档日期：<input type="text" class="date" readonly="true" />
                    </td>
                </tr>
            </table>
            <div class="subBar">
                <ul>
                    <li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
                    <li><a class="button" href="demo_page6.html" target="dialog" mask="true" title="查询框"><span>高级检索</span></a></li>
                </ul>
            </div>
        </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            <li><a class="add" href="/book/add" target="navTab"><span>添加</span></a></li>
            @*<li><a class="delete" href="/book/delete" rel="ids" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>*@
            <li><a title="确实要删除这些记录吗?" target="selectedTodo" rel="ids" posttype="string " href="/book/delete" class="delete"><span>批量删除默认方式</span></a></li>
            <li><a class="edit" href="/book/update" target="navTab"><span>修改</span></a></li>
            <li class="line">line</li>
            <li><a class="icon" href="demo/common/dwz-team.xls" target="dwzExport" targetType="navTab" title="实要导出这些记录吗?"><span>导出EXCEL</span></a></li>
        </ul>
    </div>
    <table class="table" width="100%" layoutH="138">
        <thead>
            <tr>
                <th class="" style="width: 18px; cursor: default;">
                <div class="gridCol" title="">
                    <input type="checkbox" group="ids" class="checkboxCtrl">
                    </div>
                </th>
                <th width="80">书名</th>
                <th width="120">编号</th>
                <th width="100">价格</th>
                <th width="150">作者</th>
                <th width="80" align="center">出版年月</th>
                <th width="80">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (book.Model.T_Base_Book item in lst)
            {
                <tr target="sid_user" rel="1">
                    <td style="width: 18px;">
                        <div>
                            <input name="ids" value="@item.Id" type="checkbox">
                        </div>
                    </td>
                    <td>@item.BookName</td>
                    <td>@item.Code</td>
                    <td>@item.Price</td>
                    <td>@item.Author</td>
                    <td>@item.PYear</td>
                    <td><a class="button" href="/book/update/@item.Id" target="navTab"><span>编辑</span></a> </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="panelBar">
        <div class="pages">
            <span>显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value})">
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="200">200</option>
            </select>
            <span>条，共 @ViewBag.RecordCount 条</span>
        </div>

        <div class="pagination" targetType="navTab" totalCount="@ViewBag.RecordCount" numPerPage="@ViewBag.PageSize" pageNumShown="5" currentPage="@ViewBag.CurrentPageIndex"></div>

    </div>
</div>
